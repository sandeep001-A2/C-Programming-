#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int B;
    float HRA, DA, T;
    scanf("%d", &B);
    if(B<=10000){
        HRA = 0.2*B;
            DA = 0.3*B;
    }
    else if(B<=20000){
        HRA = 0.25*B;
        DA = 0.4*B;
    }
    else {
        HRA = 0.3*B;
        DA = 0.5*B;
    }
    T = B+HRA+DA;
    printf("%.2f", T);
    
    return 0;
}
